<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/IntLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/CountryTxtView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/country_flag"
        android:textColor="@color/TxtColor_Country"
        android:textSize="@dimen/textSize" />

    <ImageView
        android:id="@+id/imageFlagView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:contentDescription=""
        app:srcCompat="" />

    <ImageView
        android:id="@+id/imageCountryView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:contentDescription=""
        app:srcCompat="" />

    <TextView
        android:id="@+id/FoodTxtView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/food_img"
        android:textColor="@color/TxtColor_Country"
        android:textSize="@dimen/Welcome_TextSize" />

</LinearLayout>